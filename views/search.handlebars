{{!-- HEADING/QUOTE CARD --}}
<div class="container profile-container">
<div class="card">
    <div class="card-header card-header-style">
        Explore Recipes!
        <div class="form-group">
            <input class="form-control" id="recipe-search" placeholder="What are ya feelin'?"></input>
            <button type="button" class="btn login-buttons" id="search-button">Search</button>
        </div>
    </div>
    <div class="card-body quote-body">
        <blockquote class="blockquote mb-0 quote-styling">
            <p>â€œWithout experimentation, a willingness to ask questions and try new things, we shall surely become static, repetitive, and moribund."</p>
            <footer class="blockquote-footer quote-footer">Anthony Bourdain</footer>
        </blockquote>
    </div>

    {{!-- Placeholders for Recipe Favorites/Search Results--}}
    <div class="recipe-results" id="favorite-recipes">
        {{!-- CARD A --}}
        {{#each recipes}}
        <div class="card recipe-result-cards" style="width: 18rem;">
            <img class="card-img-top" src="{{this.strMealThumb}}" alt="{{this.strMeal}} recipe image">
            <div class="card-body">
                <h5 class="card-title">{{this.strMeal}}</h5>
            </div>
            <div class="card-body card-body-links">
                <a href="#" class="card-link">View Full</a><br>
                <a href="#" class="card-link">Save to Favorites</a><br>
            </div>
        </div>
        {{/each}}
    </div>
</div>
</div>